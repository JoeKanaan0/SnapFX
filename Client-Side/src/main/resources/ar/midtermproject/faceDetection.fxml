<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>

<SplitPane fx:id="splitPane" dividerPositions="0.8" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" prefHeight="400.0" prefWidth="754.0" stylesheets="@style.css"
           xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ar.midtermproject.controllers.FaceDetectionController">
    <AnchorPane fx:id="root" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0"
                style="-fx-background-color: black;">
        <ImageView fx:id="webcam" fitHeight="480.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0"/>
    </AnchorPane>
    <AnchorPane fx:id="rightPanel" minHeight="0.0" minWidth="0.0" prefHeight="398.0" prefWidth="192.0"
                style="-fx-background-color: grey;">
        <HBox alignment="TOP_CENTER" layoutX="-2.0" prefHeight="35.0" prefWidth="148.0" spacing="5.0"
              AnchorPane.bottomAnchor="363.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="5.0">
            <Button alignment="BOTTOM_LEFT" onAction="#loadLogin" contentDisplay="CENTER"
                    mnemonicParsing="false" text="Logout" style="-fx-font-size: 14px;"/>
            <Button mnemonicParsing="false" onAction="#loadChat" text="Chat" style="-fx-font-size: 14px;"/>
            <Button mnemonicParsing="false" onAction="#loadProfile" text="Profile" style="-fx-font-size: 14px;"/>
            <Button alignment="BASELINE_RIGHT" onAction="#loadSavedImages" contentDisplay="CENTER"
                    mnemonicParsing="false" text="Saved Images" style="-fx-font-size: 13px;"/>
        </HBox>
        <StackPane onMouseEntered="#hovered" onMouseExited="#exited" layoutX="42.0" layoutY="320.0"
                   onMouseClicked="#takePhoto" prefHeight="63.0" prefWidth="63.0"
                   style="-fx-background-color: grey;" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="42.0"
                   AnchorPane.rightAnchor="42.8">
            <Circle fill="WHITE" radius="30.0" stroke="BLACK" strokeType="INSIDE" style="-fx-opacity: 0.65;"/>
            <ImageView fitHeight="62.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true"
                       style="-fx-opacity: 0.65;">
                <Image url="@ResourceImages/camera.png"/>
            </ImageView>
        </StackPane>
        <FlowPane fx:id="filterPanel" layoutX="-26.0" layoutY="84.0" prefHeight="185.0" prefWidth="171.0"
                  style="-fx-background-color: #333333;" AnchorPane.bottomAnchor="88.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"/>
    </AnchorPane>
</SplitPane>
