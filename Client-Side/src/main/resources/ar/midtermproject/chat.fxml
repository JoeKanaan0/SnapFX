<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: grey;"
            stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ar.midtermproject.controllers.ChatController">
   <AnchorPane fx:id="upperPane" layoutY="14.0" prefHeight="307.0" prefWidth="600.0" style="-fx-background-color: grey;"
               AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
      <ListView fx:id="view" layoutX="118.0" layoutY="42.0" prefHeight="522.0" prefWidth="636.0"
                AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="42.0"/>
      <Button fx:id="backButton" layoutX="7.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="66.0"
              text="Back"/>
   </AnchorPane>
   <AnchorPane fx:id="textField" layoutX="-3.0" layoutY="562.0" prefHeight="53.0" prefWidth="432.0"
               style="-fx-background-color: grey;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="204.0" AnchorPane.topAnchor="562.0">
      <TextField fx:id="text" layoutX="107.0" layoutY="10.0" prefHeight="26.0" prefWidth="413.0"
                 AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                 AnchorPane.topAnchor="10.0"/>
   </AnchorPane>
   <AnchorPane fx:id="buttonBox" layoutX="432.0" layoutY="561.0" prefHeight="53.0" prefWidth="206.0"
               style="-fx-background-color: grey;" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <Button layoutX="13.0" layoutY="9.0" mnemonicParsing="false" onAction="#uploadImage" text="Upload Image"/>
      <Button fx:id="send" layoutX="141.0" layoutY="9.0" mnemonicParsing="false" onAction="#sendMessage"
              text="Send"/>
   </AnchorPane>
</AnchorPane>
